#!/bin/bash
# usage: bin/compile <build-dir> <cache-dir> <env-dir>

set -eo pipefail

BUILD_DIR=${1:-}
CACHE_DIR=${2:-}
ENV_DIR=${3:-}
buildpack="$(cd -P "$(dirname "$0")" && pwd)"

source "${buildpack}/common.sh"

if [ -n "$BUILDPACK_DEBUG" ]; then
  set -x
fi

TMP_PATH="$BUILD_DIR/tmp"
mkdir -p "${BUILD_DIR}/bin" "${CACHE_DIR}/dist" "${TMP_PATH}"
export PATH="$BUILD_DIR/bin:$PATH"

STACK="${STACK:-scalingo-22}"

start "Install Harfang agent"
install_jq
HARFANG_VERSION=$(fetch_latest_release)
if [ -x /opt/hurukai-agent/bin/hurukai ]; then
  warn "agent already installed"
else
  install_agent "${TMP_PATH}" | indent
fi
step "Add Harfang agent profile"
mkdir -p $BUILD_DIR/.profile.d
cat <<EOF >$BUILD_DIR/.profile.d/001_hurukai.sh
export PATH="/opt/hurukai-agent/bin:\$PATH"
/opt/hurukai-agent/bin/hurukai --fix
EOF
info "Using Harfang version: ${HARFANG_VERSION}" | indent
finished

step "Cleaning up tmp files"
rm -rf "${TMP_PATH}"

finished
